<nav id="navigation" role="navigation">
  <div class="navigation-wrapper">
    <%= img_tag("images/logo.svg", alt: "transport.beta.gouv.fr") |> link(to: "/", class: "logo") %>

    <div style="float:right; color: white; margin: 1em;">
      <%= if @current_user do %>
        <%= "Hi #{@current_user["first_name"]}" %>

        <a class="pure-button" href="<%= session_path @conn, :delete %>">
          <i class="fa fa-sign-out" aria-hidden="true"></i>
          <%= gettext "sign_out" %>
        </a>
      <% else %>
        <a class="pure-button" href="<%= session_path @conn, :explanations %>">
          <i class="fa fa-sign-in" aria-hidden="true"></i>
          <%= gettext "sign_in" %>
        </a>
      <% end %>
    </div>
  </div>
</nav>
