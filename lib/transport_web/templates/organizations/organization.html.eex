<%= if get_flash(@conn, :info) do %>
<p class="info"><%= get_flash(@conn, :info) %></p>
<% end %>
<%= if get_flash(@conn, :error) do %>
<p class="info"><%= get_flash(@conn, :error) %></p>
<% end %>
<%= if @has_pending_membership do %>
<p class="info"><%= gettext "pending_membership" %></p>
<% end %>
<%= if @has_refused_membership do %>
<p class="info"><%= gettext "refused_membership" %></p>
<% end %>

<section class="organization">
    <h1><%= @organization["name"] %></h1>
    <p><%= @organization["description"] %></p>
    <ul class="actions">
      <%= if @is_member do %>
      <li>Vous Ãªtes membre de l'organisation</li>
      <% else %>
      <li><a href="<%= organizations_path @conn, :claim, @organization["slug"] %>">Claim</a></li>
      <% end %>
    </ul>
</section>
